<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="피드"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tv_youtube"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="추천 영상"
            android:textSize="20dp"
            android:textColor="@color/ourcolor"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="10dp"
            android:background="@color/darkgray" />

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ourcolor" />

    </LinearLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_bg"
        tools:ignore="MissingConstraints" >
        <TextView
            android:id="@+id/youtu"
            android:layout_marginVertical="15dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="오늘의 Youtube 코디 영상 추천"
            android:background="@color/white"
            android:textColor="@android:color/black"

            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>



    <ScrollView
        android:background="@color/purple_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <!--one-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="310dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">


                <TextView
                    android:id="@+id/tv_youtubetitle0"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/view_thumbnail0"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="55dp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/lightgray"
                android:text="ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ" />

            <!--two-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="310dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tv_youtubetitle1"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textAlignment="center"/>

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/view_thumbnail1"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="55dp"
                    android:layout_gravity="center_horizontal"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/lightgray"
                android:text="ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ" />

            <!--three-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="310dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tv_youtubetitle2"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textAlignment="center"/>

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/view_thumbnail2"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="55dp"
                    android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/lightgray"
                android:text="ㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡㅡ" />

            <!--four-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="310dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tv_youtubetitle3"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textAlignment="center"/>

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/view_thumbnail3"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="55dp"
                    android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>

            <!--five-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="310dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/tv_youtubetitle4"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text=""
                    android:textAlignment="center"/>

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/view_thumbnail4"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="55dp"
                    android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>

</LinearLayout>