<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="피드"
            android:textColor="@color/ourcolor"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_community"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="커뮤니티"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ourcolor" />

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/darkgray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:orientation="horizontal"
        android:background="@color/ourcolor">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top2Crown"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/first" />

            <TextView
                android:id="@+id/top2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="2등"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/top2Img"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp" />

            <TextView
                android:id="@+id/top2Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="2등아이디"
                android:textColor="@color/white"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top1Crown"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/king" />

            <TextView
                android:id="@+id/top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="1등"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/top1Img"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp" />

            <TextView
                android:id="@+id/top1Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="1등아이디"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top3Crown"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/first" />

            <TextView
                android:id="@+id/top3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="3등"
                android:textColor="@color/white"
                android:textAlignment="center" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/top3Img"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp" />

            <TextView
                android:id="@+id/top3Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="3등아이디"
                android:textColor="@color/white"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrey"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="오늘의 피드"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="230dp"
                android:entries="@array/feed"
                android:scrollbarSize="5dp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_userfeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/fragment_feed_item" />
    </LinearLayout>


</LinearLayout>