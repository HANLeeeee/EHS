<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:id="@+id/fragment_feed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="피드"
            android:textColor="@color/ourcolor"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_community"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="커뮤니티"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ourcolor" />

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/darkgray" />

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:background="@color/purple_bg" >

                <LinearLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp">

                        <ImageView
                            android:id="@+id/top2Crown"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/first" />

                        <TextView
                            android:id="@+id/top2"
                            android:layout_width="54dp"
                            android:layout_height="match_parent"
                            android:text="2nd"
                            android:textColor="@color/white"
                            android:gravity="bottom"
                            android:textSize="14dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/top2Img"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/fab_text_bg2"
                        android:layout_margin="4dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp" >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_userphoto2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="4dp"
                            android:layout_marginLeft="7dp"
                            android:src="@drawable/profile_basic"
                            app:civ_circle_background_color="@color/white"/>

                        <TextView
                            android:id="@+id/top2Id"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:text="2등"
                            android:textColor="@color/ourcolor"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="7dp">

                            <ImageView
                                android:id="@+id/iv_rankinglike2"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/like_after"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/top2cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="14dp"
                                android:layout_marginLeft="2dp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:id="@+id/linearLayout"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp">

                        <ImageView
                            android:id="@+id/top1Crown"
                            android:layout_width="54dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            app:srcCompat="@drawable/king" />

                        <TextView
                            android:id="@+id/top1"
                            android:layout_width="54dp"
                            android:layout_height="match_parent"
                            android:text="1st"
                            android:textColor="@color/white"
                            android:gravity="bottom"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/top1Img"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/fab_text_bg2"
                        android:layout_margin="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_userphoto1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="4dp"
                            android:layout_marginLeft="7dp"
                            android:src="@drawable/profile_basic"
                            app:civ_circle_background_color="@color/white" />

                        <TextView
                            android:id="@+id/top1Id"
                            android:layout_width="93dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="6dp"
                            android:text="1등"
                            android:textColor="@color/ourcolor"
                            android:textSize="17dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_rankinglike1"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/like_after"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/top1cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="14dp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp">

                        <ImageView
                            android:id="@+id/top3Crown"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/first" />

                        <TextView
                            android:id="@+id/top3"
                            android:layout_width="54dp"
                            android:layout_height="match_parent"
                            android:text="3rd"
                            android:textColor="@color/white"
                            android:gravity="bottom"
                            android:textSize="14dp"
                            android:textStyle="bold"/>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/top3Img"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/fab_text_bg2"
                        android:layout_margin="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_userphoto3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="4dp"
                            android:layout_marginLeft="7dp"
                            android:src="@drawable/profile_basic"
                            app:civ_circle_background_color="@color/white"/>

                        <TextView
                            android:id="@+id/top3Id"
                            android:layout_width="41dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:text="3등"
                            android:textColor="@color/ourcolor"
                            android:textSize="14dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="5dp">

                            <ImageView
                                android:id="@+id/iv_rankinglike3"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/like_after"
                                android:gravity="center" />

                            <TextView
                                android:id="@+id/top3cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="14dp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="2dp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="오늘의 피드"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:entries="@array/feed"
                        android:scrollbarSize="5dp"
                        android:gravity="center_vertical|right" />
                        <!-- 이거오른쪽정렬하고싶은데 안되네... -->
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_userfeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/fragment_feed_item" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>