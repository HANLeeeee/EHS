<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_feed"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="피드"
            android:textColor="@color/ourcolor"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_community"
            android:layout_width="202dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="커뮤니티"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ourcolor" />

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="10dp"
            android:background="@color/darkgray" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="109dp"
        android:layout_height="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:entries="@array/feed"
        android:scrollbarSize="5dp"></Spinner>


    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_userfeed"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        tools:listitem="@layout/fragment_feed_item" />


</LinearLayout>