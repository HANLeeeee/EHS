<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="188dp"
        android:layout_height="290dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:verticalScrollbarPosition="right"
        android:background="@drawable/fab_text_bg">

        <ImageView
            android:id="@+id/iv_feedphoto"
            android:layout_width="160dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/test_userfeed_d" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_userphoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_mypage" />

            <TextView
                android:id="@+id/tv_userID"
                android:layout_width="144dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="SUIN" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/tv_styletag"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:text="#스타일"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_haert"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_noheart"
                android:backgroundTint="#F60505"
                android:gravity="right" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>