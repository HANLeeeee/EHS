<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="TPO 설정"
        android:textColor="@color/ourcolor"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_dailylook"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="데일리룩" />
        <Button
            android:id="@+id/btn_datelook"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="데이트룩" />
        <Button
            android:id="@+id/btn_officelook"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="오피스룩" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_partylook"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="파티룩" />
        <Button
            android:id="@+id/btn_guestlook"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="하객룩" />
        <Button
            android:id="@+id/btn_athleisurelook"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="애슬레저룩" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_speciallook"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="스페셜룩" />
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:text="옵션초기화" />
        <View
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_tpochoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/ourcolor"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="선택완료" />



</LinearLayout>