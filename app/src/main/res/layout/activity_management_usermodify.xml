<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.ManagementUserModify_Activity"
    android:id="@+id/layout_usermodify">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="아이디"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" 정보 수정"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/white"
            android:src="@drawable/ic_edit"
            android:layout_marginHorizontal="10dp"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_manausermodify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="30dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_userProfileImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    tools:srcCompat="@tools:sample/avatars"
                    android:layout_marginHorizontal="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/ourcolor"
                        android:textStyle="bold"
                        android:text="아이디" />
                    <EditText
                        android:id="@+id/et_userId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="아이디"
                        android:textSize="16sp"
                        android:textColor="@color/darkgray"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:paddingHorizontal="15dp"
                        android:enabled="false"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/ourcolor"
                android:textStyle="bold"
                android:text="레벨" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="레벨선택"
                android:textSize="16sp"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/tvv_level2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/ourcolor"
                android:textStyle="bold"
                android:text="레벨 단계"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_level2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="레벨선택"
                android:textSize="16sp"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:visibility="gone"
                android:enabled="false"/>



            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/ourcolor"
                android:textStyle="bold"
                android:text="이름" />
            <EditText
                android:id="@+id/et_userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="이름"
                android:textSize="16sp"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:enabled="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/ourcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="비밀번호" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pwreset"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/ourcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="비밀번호 초기화"
                    android:layout_marginRight="25dp"
                    android:enabled="false"/>
            </LinearLayout>


            <EditText
                android:id="@+id/et_userPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text="비밀번호"
                android:textSize="16sp"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:enabled="false"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/ourcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="생년월일" />

            <EditText
                android:id="@+id/et_userBirth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="date"
                android:text="생년월일"
                android:textSize="16sp"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:enabled="false"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/ourcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="이메일" />
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="이메일"
                android:background="@drawable/button_background"
                android:textSize="16sp"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:enabled="false"/>


            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/ourcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="성별" />
            <TextView
                android:id="@+id/tv_userGender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="여자"
                android:textSize="16sp"
                android:textColor="@color/darkgray"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="15dp"
                android:enabled="false"/>

            <Button
                android:id="@+id/btn_modify"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_background_complete"
                android:backgroundTint="@color/darkgray"
                android:text="수정하기"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:enabled="false"/>

            <Button
                android:id="@+id/btn_modify2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_background_complete"
                android:backgroundTint="@color/ourcolor"
                android:text="수정하기"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>